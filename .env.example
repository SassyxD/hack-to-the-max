# Database
DATABASE_URL="postgresql://user:password@localhost:5432/crypto_wallet"

# Firebase Admin
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-client-email"

# Blockchain Network Settings
# Bitcoin
BTC_NETWORK="testnet" # or mainnet
BTC_NODE_URL="https://btc-node-url"
BTC_NODE_USERNAME="username"
BTC_NODE_PASSWORD="password"

# Ethereum
ETH_NETWORK="goerli" # or mainnet
ETH_NODE_URL="https://eth-node-url"
ETH_PRIVATE_KEY="your-eth-private-key"

# TRON
TRON_NETWORK="shasta" # or mainnet
TRON_NODE_URL="https://tron-node-url"
TRON_PRIVATE_KEY="your-tron-private-key"

# Lightning Network
LNBITS_URL="https://legend.lnbits.com"
LNBITS_ADMIN_KEY="your-lnbits-admin-key"
LNBITS_INVOICE_KEY="your-lnbits-invoice-key"

# Security
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-encryption-key"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug" # debug, info, warn, error

# App Settings
PORT=3000
NODE_ENV="development" 